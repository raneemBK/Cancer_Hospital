<main>
    <div class="cards">
        <div class="card1">
            @foreach (var item in Model)
            {
                @if (item.DoctorText != "test")
                {
                    <div class="receiveText">
                        <div class="name">
                            <div>
                                <img src="..//Images/userIcon.png">
                                <p>@Html.DisplayFor(modelItem => item.DoctorName)</p>
                            </div>
                        </div>
                        <div class="text">
                            <p>@Html.DisplayFor(modelItem => item.DoctorText)</p>
                        </div>


                    </div>

                }
                <div class="clear">.</div>

                @if (item.PatientText != "test")
                {
                    <div class="senderText">
                        <div class="name">
                            <img src="..//Images/userIcon.png">
                            <p>@Html.DisplayFor(modelItem => item.PatientName)</p>
                        </div>
                        <div class="text">
                            <p>@Html.DisplayFor(modelItem => item.PatientText)</p>
                        </div>
                    </div>

                }
                <div class="clear">.</div>

            }
        </div>

    </div>


    <form class="formm" asp-action="ChatSend" asp-controller="Patient">
        <input name="patientID" type="hidden" value="@ViewBag.Pid">
        <input name="doctorID" type="hidden" value="@ViewBag.Did">

        <input name="text" type="text" class="text" placeholder="your comment..." />
        <button type="submit" class="send">Send</button>
    </form>

</main>
