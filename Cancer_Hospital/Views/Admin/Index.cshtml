                @Html.DisplayNameFor(model => model.D_educations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_city)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                @if (item.D_id > 0)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.D_id)
