                @Html.DisplayFor(modelItem => item.D_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_gender)
            </td>
                @if (item.D_birthdate != DateTime.MinValue)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.D_birthdate)
                    </td>
                }
            <td>
                @Html.DisplayFor(modelItem => item.D_educations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.D_city)
            </td>

