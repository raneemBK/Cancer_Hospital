            </div>
            @*<button class="btn-login" onclick="window.location.href='../DoctorLogin/Login' ">Login</button>*@
        </nav>
    </header>
</div>

<div id="tableMargin">.</div>

<p style="text-align:center; font-size:x-large">
Doctors
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.D_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.D_fname)
