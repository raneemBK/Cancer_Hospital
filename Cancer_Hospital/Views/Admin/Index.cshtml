@model IEnumerable<Cancer_Hospital.Models.GetAllData>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/HomeAll.css">

<div>
    <header id="header">
        <h3 class="logo">Cancer hospital</h3>
        <nav class="navigation">
            <a href="#">Home</a>
