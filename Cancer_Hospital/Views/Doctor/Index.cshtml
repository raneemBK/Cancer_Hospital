                <p class="id">Patient Id: @Html.DisplayFor(modelItem => item.Id) </p>
                <p class="fname">First Name: @Html.DisplayFor(modelItem => item.Fname) </p>
                <p class="lname">Last Name: @Html.DisplayFor(modelItem => item.Lname) </p>
                <p class="cancer-type">Cancer Type: @Html.DisplayFor(modelItem => item.CancerType) </p>
                <p class="docid">Docter Id: @Html.DisplayFor(modelItem => item.DoctorID)</p>
                <p class="cancer-stage">Cancer stage: @Html.DisplayFor(modelItem => item.CancerStage)</p>
                <p class="treatmentplan">Treatment Plan: @Html.DisplayFor(modelItem => item.TreatmentPlan)</p>
                <p class="labroatory-res">labroatory result: @Html.DisplayFor(modelItem => item.LAboratoryResults)</p>
                </div>
            </div>
            <hr>
            <div class="card-footer">

                <div class="link">
                <img src="~/images/add.png" alt="">
