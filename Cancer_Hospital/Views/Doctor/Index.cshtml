                <img src="~/images/usericon.png" />
                </div>
                <div class="main-info">
                    <h1 class="name">@Html.DisplayFor(modelItem => item.Fname) @Html.DisplayFor(modelItem => item.Lname)</h1>
                <h2 class="cancer-type">Description</h2>
                    <p class="description">
