@model Cancer_Hospital.Models.UpdateDataPatient

@{
    ViewData["Title"] = "Update";
}
<head>
    <link rel="stylesheet" href="~/css/Login.css">
</head>

<div class="cards">
    <div class="card">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Discrption" class="control-label"></label>
                <input asp-for="Discrption" class="form-control" />
                <span asp-validation-for="Discrption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CancerStage" class="control-label"></label>
                <input asp-for="CancerStage" class="form-control" />
                <span asp-validation-for="CancerStage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentPlan" class="control-label"></label>
                <input asp-for="TreatmentPlan" class="form-control" />
                <span asp-validation-for="TreatmentPlan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LAboratoryResults" class="control-label"></label>
                <input asp-for="LAboratoryResults" class="form-control" />
                <span asp-validation-for="LAboratoryResults" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


